# Use Node.js 18 as base image
FROM node:18-alpine

# Set working directory
WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy source code
COPY . .

# Expose port 3000
EXPOSE 3000

# Run in development mode instead of building
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0", "--port", "3000"]
